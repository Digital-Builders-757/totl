{
  "extends": ["next/core-web-vitals", "next/typescript"],
  "plugins": ["react-hooks", "import"],
  "rules": {
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/consistent-type-imports": "error",
    "@typescript-eslint/no-unused-vars": ["error", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "import/order": ["warn", {
      "groups": ["builtin", "external", "internal", "parent", "sibling", "index", "object", "type"],
      "newlines-between": "always",
      "alphabetize": { "order": "asc", "caseInsensitive": true }
    }],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "no-restricted-imports": [
      "error",
      {
        "paths": [
          {
            "name": "@supabase/supabase-js",
            "message": "Use lib/supabase-client.ts or lib/supabase-admin-client.ts instead."
          },
          {
            "name": "@/types/database",
            "message": "Import Database from '@/types/supabase' instead."
          },
          {
            "name": "@/lib/supabase/supabase-admin-client",
            "message": "Use the canonical admin client: @/lib/supabase-admin-client"
          }
        ],
        "patterns": [
          {
            "group": [
              "@/lib/supabase/supabase-admin-client",
              "@/lib/supabase/supabase-admin-client.*"
            ],
            "message": "Use the canonical admin client: @/lib/supabase-admin-client"
          }
        ]
      }
    ],
    "no-restricted-syntax": [
      "error",
      {
        "selector": "JSXAttribute[name.name='placeholderQuery']",
        "message": "Do not pass `placeholderQuery` to <SafeImage /> (deprecated)."
      },
      {
        "selector": "Literal[value='/onboarding/select-account-type']",
        "message": "Do not hardcode onboarding routes. Use ONBOARDING_PATH from '@/lib/constants/routes'."
      },
      {
        "selector": "Literal[value='/talent/dashboard']",
        "message": "Do not hardcode dashboard routes. Use canonical routing helpers/constants."
      },
      {
        "selector": "Literal[value='/client/dashboard']",
        "message": "Do not hardcode dashboard routes. Use canonical routing helpers/constants."
      },
      {
        "selector": "Literal[value='/admin/dashboard']",
        "message": "Do not hardcode dashboard routes. Use canonical routing helpers/constants."
      },
      {
        "selector": "Literal[value='/login']",
        "message": "Do not hardcode auth routes. Use AUTH_ROUTES / route helpers from '@/lib/constants/routes'."
      },
      {
        "selector": "Literal[value='/choose-role']",
        "message": "Do not hardcode auth routes. Use AUTH_ROUTES / route helpers from '@/lib/constants/routes'."
      },
      {
        "selector": "Literal[value='/verification-pending']",
        "message": "Do not hardcode auth routes. Use AUTH_ROUTES / route helpers from '@/lib/constants/routes'."
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "lib/constants/routes.ts",
        "lib/routing/decide-redirect.ts"
      ],
      "rules": {
        "no-restricted-syntax": "off"
      }
    },
    {
      "files": ["components/**/*.{ts,tsx}"],
      "rules": {
        "no-restricted-syntax": [
          "error",
          {
            "selector": "CallExpression[callee.name='createClient']",
            "message": "No DB calls in client components. Use server components/actions."
          }
        ]
      }
    }
  ]
}
