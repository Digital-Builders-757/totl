{
  "project": {
    "name": "TOTL Agency",
    "type": "nextjs-typescript",
    "root": ".",
    "include": [
      "app/**/*.{ts,tsx}",
      "components/**/*.{ts,tsx}",
      "lib/**/*.{ts,tsx}",
      "types/**/*.ts",
      "hooks/**/*.{ts,tsx}",
      "supabase/migrations/*.sql"
    ],
    "exclude": [
      "node_modules/**",
      ".next/**",
      "dist/**",
      "*.d.ts",
      ".claudecode/**"
    ]
  },
  "analysis": {
    "typescript": {
      "enabled": true,
      "strict": true,
      "configPath": "./tsconfig.json"
    },
    "react": {
      "enabled": true,
      "version": "18"
    },
    "nextjs": {
      "enabled": true,
      "version": "15",
      "appDir": true
    }
  },
  "features": {
    "semanticSearch": true,
    "crossFileRefactoring": true,
    "componentAnalysis": true,
    "dependencyTracking": true,
    "securityAnalysis": true
  },
  "performance": {
    "maxFileSize": "1MB",
    "indexTimeout": 30000,
    "cacheEnabled": true,
    "incrementalAnalysis": true
  }
}